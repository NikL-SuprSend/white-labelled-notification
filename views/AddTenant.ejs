<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Tenant</title>
  <link rel="stylesheet" href="css/stylesTenants.css">
</head>
<body>
  <div class="container">
    <h1>Add Tenant</h1>
    <form action="/AddTenants" method="post">
      <div class="form-group">
       <label for="brand_id">Brand ID:</label>
       <input type="text" id="brand_id" name="brand_id" placeholder="[a-z]-[0-9]-[ _ or -]" required oninput="validateBrandID()">
      </div>
      <div class="form-group">
        <label for="brand_name">Brand Name:</label>
        <input type="text" id="brand_name" placeholder="Suprsend" name="brand_name" required>
      </div>
      <div class="form-group">
        <label for="logo_url">Logo URL:</label>
        <input type="url" id="logo_url" placeholder="https://yourlogo="logo_url" required>
      </div>
      <div class="form-group">
        <label for="website">Website:</label>
        <input type="url" id="website" placeholder="https://www.suprsend.com" name="website" required>
      </div>
      <div class="form-group">
        <label for="company_name">Social Media Handle name</label>
        <input type="text" id="company_name" placeholder="suprsend" name="company_name" required>
      </div>
      <div class="form-group">
        <input type="submit" value="Submit">
      </div>
    </form>
  </div>
  <script>
   function validateBrandID() {
    var brandIDInput = document.getElementById("brand_id");
    var brandIDValue = brandIDInput.value;
    brandIDInput.value = brandIDValue.replace(/[^a-z0-9_-]/g, "").toLowerCase();
  }
    </script>
</body>
</html>
